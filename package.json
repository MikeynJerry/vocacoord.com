{
  "name": "vocacoord-server",
  "version": "0.2.0",
  "description": "VocaCoord Backend",
  "scripts": {
    "start": "node server",
    "heroku-postbuild": "cd website/ && yarn install && yarn run build",
    "dev": "concurrently \"npm run-script dev:server\" \"npm run-script dev:client\"",
    "dev:server": "nodemon server",
    "dev:client": "cd .\\website\\ && npm run-script start"
  },
  "cacheDirectories": [
    "node_modules",
    "website/node_modules"
  ],
  "dependencies": {
    "body-parser": "^1.18.3",
    "clusterws": "^3.2.0",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "express-sslify": "^1.2.0",
    "helmet": "^3.14.0",
    "mongodb": "^3.1.8",
    "morgan": "^1.9.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/VocaCoord/Heroku.git"
  },
  "keywords": [
    "node",
    "heroku",
    "react"
  ],
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^4.0.1",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4",
    "nodemon": "^1.18.5",
    "prettier": "^1.15.2"
  },
  "nodemonConfig": {
    "watch": "server/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
