{
  "name": "vocacoord-server",
  "version": "0.2.0",
  "description": "VocaCoord Backend",
  "engines": {
    "node": "8.9.x"
  },
  "scripts": {
    "start": "node server",
    "heroku-postbuild": "cd website/ && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
    "dev": "concurrently \"npm run-script dev:server\" \"npm run-script dev:client\"",
    "dev:server": "nodemon server",
    "dev:client": "cd .\\website\\ && npm run-script start"
  },
  "cacheDirectories": [
    "node_modules",
    "website/node_modules"
  ],
  "dependencies": {
    "body-parser": "^1.18.3",
    "clusterws": "^3.2.0",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "express-sslify": "^1.2.0",
    "helmet": "^3.14.0",
    "mongodb": "^3.1.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/VocaCoord/Heroku.git"
  },
  "keywords": [
    "node",
    "heroku",
    "react"
  ],
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^4.0.1",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.5"
  },
  "nodemonConfig": {
    "watch": "server/"
  }
}
